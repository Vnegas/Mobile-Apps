<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base">

    <LinearLayout
        android:id="@+id/logo_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_12sdp"
        android:paddingHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/ucr_logo"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:contentDescription="UCR logo"
            android:src="@drawable/ucr_logo" />

        <ImageView
            android:id="@+id/fabio_logo"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:layout_marginStart="@dimen/_100sdp"
            android:contentDescription="Fabio Baudrit logo"
            android:src="@drawable/fabio_logo" />
    </LinearLayout>

    <ImageView
        android:id="@+id/splash_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_360sdp"
        android:contentDescription="Splash background"
        android:src="@drawable/splash_background"
        app:layout_constraintBottom_toTopOf="@+id/enter_button"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_section" />

    <Button
        android:id="@+id/enter_button"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_50ssp"
        android:letterSpacing="0.3"
        android:text="@string/entrar"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_22ssp"
        app:backgroundTint="@color/secondary"
        app:layout_constraintBottom_toTopOf="@+id/splash_footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_bg" />

    <ImageView
        android:id="@+id/splash_footer"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:contentDescription="Splash background"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_footer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
