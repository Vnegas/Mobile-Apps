<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageUCR"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:src="@drawable/ucr_logo"
        app:layout_constraintBottom_toTopOf="@+id/imageEEAFBM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageEEAFBM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:src="@drawable/eeafb"
        app:layout_constraintBottom_toTopOf="@+id/textTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageUCR" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:fontFamily="@font/noto_serif"
        android:text="@string/calibracion"
        android:textColor="@color/black"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textVersion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageEEAFBM" />

    <TextView
        android:id="@+id/textVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="@dimen/_100sdp"
        android:fontFamily="@font/noto_serif"
        android:text="@string/version1"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonEntrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />

    <Button
        android:id="@+id/buttonEntrar"
        android:layout_width="411dp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/no_rounded_button"
        android:fontFamily="@font/glacial"
        android:letterSpacing="0.3"
        android:text="Entrar"
        android:textColor="#C3000000"
        android:textSize="@dimen/_20sdp"
        app:backgroundTint="#D57C9A60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
