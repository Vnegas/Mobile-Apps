<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_16sdp"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:contentDescription="Warning dialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_276sdp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:padding="@dimen/_16sdp">

        <TextView
            android:id="@+id/titleAdvertencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:paddingBottom="@dimen/_8sdp"
            android:text="ADVERTENCIA"
            android:textColor="@color/red"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textAdvertencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:justificationMode="inter_word"
            android:paddingBottom="@dimen/_8sdp"
            android:text="@string/advertencia_contenido"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleAdvertencia" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:padding="@dimen/_12sdp"
            android:text="@string/entendido"
            android:textColor="@color/primary"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textAdvertencia"
            app:layout_constraintVertical_bias="1.0"
            app:strokeColor="@color/primary"
            app:strokeWidth="@dimen/_2sdp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
